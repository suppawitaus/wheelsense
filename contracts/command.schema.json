{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Command v1.0",
  "type": "object",
  "required": ["schema", "ts", "action", "args", "requestId"],
  "properties": {
    "schema": { "type": "string", "const": "1.0" },
    "ts": { "type": "integer", "minimum": 0 },
    "action": { "type": "string", "minLength": 1, "maxLength": 32 },
    "args": {
      "type": "object",
      "additionalProperties": { "type": ["number", "integer", "boolean", "string"] }
    },
    "requestId": { "type": "string", "minLength": 1, "maxLength": 64 }
  },
  "additionalProperties": false}
